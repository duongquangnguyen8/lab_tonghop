<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@drawable/backgroung_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/backgroung_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLock_Login"
            android:layout_width="274dp"
            android:layout_height="181dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_lock" />

        <TextView
            android:id="@+id/tvOne_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLock_Login"
            android:gravity="center"
            android:text="Chào mừng bạn đã trở lại"
            android:textColor="#1A2B27"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvTwo_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOne_Login"
            android:text="Vui lòng đăng nhập để tiếp tục"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#EC6519"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/edtUser_Login"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:layout_below="@+id/tvTwo_Login"
            android:layout_margin="20dp"
            android:hint="Nhập username"
            android:padding="15dp" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edtPassword_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:layout_below="@+id/edtUser_Login"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Nhập password"
            android:padding="15dp" />
        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPassword_Login"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Ghi nhớ tài khoản"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
            <Button
                android:id="@+id/btnDangNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="20sp"
                android:layout_below="@+id/linear_1"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#3552BA" />


    </RelativeLayout>
</ScrollView>
